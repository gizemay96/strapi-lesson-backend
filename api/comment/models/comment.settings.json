{
  "kind": "collectionType",
  "collectionName": "comment",
  "info": {
    "name": "comment"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "text": {
      "type": "text",
      "required": true,
      "maxLength": 144
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "comments"
    },
    "tweet": {
      "model": "tweet",
      "via": "comments"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
